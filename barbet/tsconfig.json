{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "lib": ["ES2022", "dom", "webworker"],
    "paths": {
      "@matrix/*": ["../seampan/matrix/*"],
      "@seampan/*": ["../seampan/*"]
    }
  },
  "exclude": ["build-js", "dist"]
}
