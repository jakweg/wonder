{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "allowArbitraryExtensions": true,
    "lib": ["ES2024", "dom", "webworker"],
    "paths": {
      "@matrix/*": ["../seampan/matrix/*"],
      "@seampan/*": ["../seampan/*"],
      "@3d/*": ["./src/main/3d-stuff/*"],
      "@game": ["./src/main/game-state/game-state"],
      "@entry/*": ["./src/main/entry-points/*"],
      "@game/*": ["./src/main/game-state/*"],
      "@sync-operations/*": ["./src/main/game-state/sync-operations/*"],
      "@build": ["./src/main/util/build-info"],
      "@utils/*": ["./src/main/util/*"]
    }
  },
  "exclude": ["dist"]
}
