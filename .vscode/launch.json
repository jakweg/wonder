{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build&serve",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/encytem",
      "command": "docker-compose up --build",
      "env": {
        "SERVE": "8000",
        "DEV": "vscode"
      },
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "See frontend",
        "pattern": "encytem-server-1 | Serving at port 8000"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "See frontend",
      "webRoot": "${workspaceFolder}/barbet",
      "url": "http://localhost:8000",
      "disableNetworkCache": true
    },
    {
      "name": "Multiplayer build&serve",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/slimeworm",
      "command": "npm run dev"
    }
  ]
}
